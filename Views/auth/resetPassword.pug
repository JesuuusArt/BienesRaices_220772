extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-action Bienes 
            span.font-normal.text-primaryText Raices
        h2.text-center.text-2xl.font-extrabold= page

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-error.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.fade-error= error.msg

        .mt-8.mx-auto.max-w-lg
            .bg-formBackground.py-8.px-6.rounded-md.shadow-md
                form(method="POST" noValidate).space-y-5
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.mb-5
                        label.block.text-sm.uppercase.text-secondaryText.mb-2.font-bold Ingresa tu nueva Contraseña:
                        input#newPassword.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu nueva contraseña" type="password" name="newPassword")

                    input(class="w-full bg-action text-white hover:bg-hoverAction font-bold py-3 cursor-pointer" type="submit" value="Guardar contraseña")

    if errores
        style.
            .fade-error {
                transition: opacity 1s ease-in-out;
            }
        script.
            setTimeout(function() {
                const errorMessages = document.querySelectorAll('.fade-error');
                errorMessages.forEach((message, index) => {
                    setTimeout(() => {
                        message.style.opacity = '0'; 
                        setTimeout(() => {
                            message.style.display = 'none'; 
                        }, 1000); 
                    }, index * 2000); 
                });
            }, 1500); 